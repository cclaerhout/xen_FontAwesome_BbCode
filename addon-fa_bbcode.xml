    <template title="bbm_fontawesome" version_id="0" version_string="1.0"><![CDATA[<xen:require css="bbm_fontawesome.css" />

<xen:if is="{$options.uniqFont}">
	<xen:if is="{$options.textPosition} == 'left'">
		<span class="bbm_fa bbm_fa_solo">{xen:raw $content}<i class="fa {$options.uniqFont}" {xen:raw $options.extraCssFirst}></i></span>
	<xen:else />
		<span class="bbm_fa bbm_fa_solo"><i class="fa {$options.uniqFont}" {xen:raw $options.extraCssFirst}></i>{xen:raw $content}</span>
	</xen:if>
<xen:else />
	<xen:if is="{$options.textPosition} == 'left'">
		<span class="bbm_fa bbm_fa_stack">{xen:raw $content}<span class="{$options.stack.wrapper}">
			<i class="fa {$options.stack.font1}" {xen:raw $options.extraCssFirst}></i>
			<i class="fa {$options.stack.font2}" {xen:raw $options.extraCssSecond}></i>
		</span></span>
	<xen:else />
		<span class="bbm_fa bbm_fa_stack"><span class="{$options.stack.wrapper}">
			<i class="fa {$options.stack.font1}" {xen:raw $options.extraCssFirst}></i>
			<i class="fa {$options.stack.font2}" {xen:raw $options.extraCssSecond}></i>
		</span>{xen:raw $content}</span>
	</xen:if>
</xen:if>]]></template>
