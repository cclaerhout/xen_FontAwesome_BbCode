    <template title="quattro_dialog_bbm_fa" version_id="0" version_string="1.0"><![CDATA[<xen:require js="js/sedo/fabbcode/jautochecklist/jAutochecklist.min.js" />
<xen:require js="js/sedo/fabbcode/colpick/colpick.js" />
<xen:require js="js/sedo/fabbcode/tinyquattro/fa.min.js" />

<xen:require css="quattro_dialog.css" />
