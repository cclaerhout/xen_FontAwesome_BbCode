<link rel="stylesheet" href="js/sedo/fabbcode/colpick/colpick.css" />

<xen:set var="$optionsEl.1">1</xen:set>
<xen:set var="$optionsEl.2">2</xen:set>

<script type="text/javascript">
	if(typeof xenMCE.Phrases === 'undefined') xenMCE.Phrases = {};
	xenMCE.Phrases.Fa = {
		textAllSelected: "{xen:jsescape {xen:phrase sedo_fa_all}}",
		textEmpty: "{xen:jsescape {xen:phrase sedo_fa_please_select}}",
		textMoreItem: "{xen:jsescape {xen:phrase sedo_fa_and_x_more}}",
		textNoResult: "{xen:jsescape {xen:phrase sedo_fa_no_result_found}}",
		textSearch: "{xen:jsescape {xen:phrase sedo_fa_type_something}}",
		textInput: "{xen:jsescape {xen:phrase sedo_fa_text_input}}",
		resetColor: "{xen:jsescape {xen:phrase sedo_fa_reset_color}}",
		missingAlert: "{xen:jsescape {xen:phrase sedo_fa_missing_alert}}"
	};
</script>

<div class="mceTitle FastReload" data-width="500" data-height="300">{xen:phrase sedo_fabbcode_fontawesome_creator}</div>

<div id="bbm_fa">
	<dl class="xenmce_inline">
		<dt>{xen:phrase sedo_fa_select_icons}</dt>
		<dd><ul id="fa_list" data-name="faList">
		<xen:foreach loop="$fonts" value="$fontClass">
			<li data-value="{$fontClass}"><span class="fa {$fontClass} fa-lg logo"></span> {$fontClass}</li>
		</xen:foreach>
		</ul></dd>
		
		<dt></dt>
		<dd>
			<span id="preview_fa_align" class="fa-stack">
				<i class="fa fa-stack-2x fa-square-o"></i>
				<i class="fa fa-align-right fa-stack-1x"></i>
			</span>
		</dd>
	</dl>

	<xen:foreach loop="$optionsEl" value="$optionEl">
	<dl id="options_wrapper_{$optionEl}" class="xenmce_inline options">
		<dt>Icon {$optionEl} options</dt>
		<dd><ul id="fa_options_{$optionEl}" class="fa_options" data-name="faOptions_{$optionEl}">

			<li class="group">{xen:phrase sedo_fa_icon_size}</li>
				<li class="child" data-value="fa-lg">{xen:phrase sedo_fa_icon_zoom_lg}</li>
				<xen:if is="{$optionEl} == 1">
					<li class="child" data-value="fa-2x">{xen:phrase sedo_fa_icon_zoom_2x}</li>
					<li class="child" data-value="fa-3x">{xen:phrase sedo_fa_icon_zoom_3x}</li>
					<li class="child" data-value="fa-4x">{xen:phrase sedo_fa_icon_zoom_4x}</li>
					<li class="child" data-value="fa-5x">{xen:phrase sedo_fa_icon_zoom_5x}</li>
				</xen:if>
			<li class="group">{xen:phrase sedo_fa_border_and_pulled_icons}</li>
				<li class="child" data-value="fa-border">{xen:phrase sedo_fa_border}</li>
				<li class="child" data-value="pull-left">{xen:phrase sedo_fa_pull_left}</li>
				<li class="child" data-value="pull-right">{xen:phrase sedo_fa_pull_right}</li>
			<li class="group">{xen:phrase sedo_fa_rotated_and_flipped}</li>
				<li class="child" data-value="fa-rotate-90">{xen:phrase sedo_fa_rotate_90}</li>
				<li class="child" data-value="fa-rotate-180">{xen:phrase sedo_fa_rotate_180}</li>
				<li class="child" data-value="fa-rotate-270">{xen:phrase sedo_fa_rotate_270}</li>
				<li class="child" data-value="fa-flip-horizontal">{xen:phrase sedo_fa_flip_honrizontal}</li>
				<li class="child" data-value="fa-flip-vertical">{xen:phrase sedo_fa_flip_vertical}</li>
			<li class="group">{xen:phrase sedo_fa_stacked_icons}</li>
				<li class="child" data-name="stack" data-locked="1" data-value="fa-stack-1x">{xen:phrase sedo_fa_normal_icon}</li>
				<li class="child" data-name="stack" data-locked="1" data-value="fa-stack-2x">{xen:phrase sedo_fa_larger_icon}</li>
				<li class="child" data-name="stack" data-locked="1" data-value="fa-inverse">{xen:phrase sedo_fa_inverse_icon}</li>
			<li class="group">{xen:phrase sedo_fa_misc}</li>
				<li class="child" data-value="fa-fw">{xen:phrase sedo_fa_fixed_width}</li>
				<li class="child" data-value="fa-spin">{xen:phrase sedo_fa_spinning_effect}</li>
		</ul></dd>
		
		<dt></dt>
		<dd>
			<span id="bbm_fa_colpick_{$optionEl}" class="bbm_fa_colpick"><i class="fa fa-pencil-square-o fa-2x"></i></span>
		</dd>	
	</dl>
	</xen:foreach>
	
	<ul id="preview_fa" class="messageText ugc baseHtml">
		<li id="preview_fa_solo" class="preview_fa_wrapper">
			<i></i>
		</li>
		<li id="preview_fa_stack" class="preview_fa_wrapper">
			<span>
				<i></i>
				<i></i>
			</span>
		</li>
		<li id="preview_fa_txt" class="right"><input 
			id="fa_txt_input"
			name="bbmFaText"
			type="text"
			value="{xen:phrase sedo_fa_text_input}"
		/></li>
	</ul>
	
	<input name="bbmFaBtn1" type="hidden" value="" />
	<input name="bbmFaBtn2" type="hidden" value="" />
	<input name="bbmFaOpt1" type="hidden" value="" />
	<input name="bbmFaOpt2" type="hidden" value="" />
	<input name="bbmFaOptRoot" type="hidden" value="" />
	<input name="bbmFaStack" type="hidden" value="0" />
	<input name="bbmFaPos" type="hidden" value="right" />
	<input name="bbmFaColor1" type="hidden" value="" />
	<input name="bbmFaColor2" type="hidden" value="" />	
</div>]]></template>
    <template title="quattro_dialog_bbm_fa.css" version_id="0" version_string="1.0"><![CDATA[#bbm_fa #jAutochecklist_wrapper_fa_list{
	margin-top:3px;
	margin-left:1px;
	text-align:center;
	max-width:300px;
	width:250px;
}

#bbm_fa #jAutochecklist_wrapper_fa_list.jAutochecklist_active .jAutochecklist_popup{
	bottom: -150px;
}

#bbm_fa #jAutochecklist_wrapper_fa_list .jAutochecklist_popup{
	bottom: -50px;
}

#bbm_fa #jAutochecklist_wrapper_fa_list .jAutochecklist_popup:before{
	border-color: #999999 rgba(0, 0, 0, 0);
	border-width: 0 10px 10px;
	bottom: auto;
	top: -10px;
}
#bbm_fa #jAutochecklist_wrapper_fa_list .jAutochecklist_popup:after{
	border-color: rgba(255, 255, 255, 0.9) rgba(0, 0, 0, 0);
	border-width: 0 8px 9px;
	bottom: auto;	
	top: -9px;
}

#bbm_fa #jAutochecklist_wrapper_fa_list .jAutochecklist_graph_results{
	margin-top: 3px;
}

#bbm_fa .jAutochecklist_wrapper.fa_options{
	margin-top:3px;
	margin-left:1px;
	text-align:center;
	max-width:300px;
	width:250px;
}
#bbm_fa #preview_fa_stack{
	display:none;
}

#bbm_fa #preview_fa{
	max-width: 80%;
	text-align:center;
	margin-left:auto;
	margin-right:auto;
	background: {xen:property primaryLighter};
	border: 1px solid {xen:property primaryLightish};
	border-radius:5px;
	padding:15px;
	height: 115px;
	overflow: auto;
}

#bbm_fa #preview_fa_txt,
#bbm_fa #preview_fa_solo,
#bbm_fa #preview_fa_stack{
	width: 50%;
}

#bbm_fa #preview_fa li{
	display:inline;
}

#bbm_fa #preview_fa_align{
	cursor:pointer;
}

#bbm_fa #preview_fa_txt.left input{
	text-align:right;
}

#bbm_fa #preview_fa_txt.right input{
	text-align:left;
}

#bbm_fa .bbm_fa_colpick{
	cursor:pointer;
}

.bbm_fa_color_raz{
	color: white;
	position:absolute;
	bottom:4px;
	left:9px;
	text-align:center;
	cursor:pointer;
}

#bbm_fa .fa-stack-1x {
	font-size: 1em;//fix
}]]></template>
